<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/send_chatter_background_color"
    >
    <TextView
        android:layout_height="wrap_content"
        android:text="@string/send_chatter_title"
        android:textSize="25sp"
        android:textColor="@color/send_chatter_title_color"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:hint="@string/send_chatter_hint"
        android:background="@color/send_chatter_edit_text_background_color"
        android:id="@+id/textbox_data"
        />
    <Button
        android:layout_height="wrap_content"
        android:layout_width="250dp"
        android:textAllCaps="false"
        android:text="@string/send_chatter_button_text"
        android:textSize="15sp"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginBottom="5sp"
        android:id="@+id/button_send_data"
        android:layout_gravity="center_horizontal"
        />
    <Button
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_width="250dp"
        android:text="View Chatter"
        android:textSize="15sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginBottom="5sp"
        android:id="@+id/button_view_chatter"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>